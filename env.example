# GovTech Project Environment Variables
# Copy this file to .env.local and update the values according to your environment

# ===========================
# Frontend (Next.js) Variables
# ===========================

# API URL for backend communication
# For local development: http://127.0.0.1:8000
# For production: Update with your backend URL
NEXT_PUBLIC_API_URL=http://127.0.0.1:8000

# ===========================
# Backend (FastAPI) Variables
# ===========================

# Database Configuration
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database
# Default for local development: postgresql://postgres:admin@localhost:5432/govtech_db
DATABASE_URL=postgresql://postgres:password@localhost:5432/database_name

# JWT Secret Key for token generation
# IMPORTANT: Change this to a strong random string in production!
# You can generate one using: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your_secret_key_here

# JWT Algorithm
ALGORITHM=HS256

# Token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Project Name
PROJECT_NAME=GovTech

# API Version String
API_V1_STR=/api/v1
